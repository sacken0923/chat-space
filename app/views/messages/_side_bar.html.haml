.chat-side
  .chat-side-top
    .chat-side-top__name
      = current_user.name
    .chat-side-top__icon
      .chat-side-top-__icon__edit
        = link_to new_group_path do
          = fa_icon "edit"
      .chat-side-top__icon__cog
        = link_to edit_user_path(current_user) do
          = fa_icon "cog"
  .chat-side-bottom
    .chat-side-bottom-groups
      - current_user.groups.each do |group|
        .chat-side-bottom-groups__name
          = link_to group_messages_path(group) do
            = group.name
